#version 150

in vec3 aPosition;
in vec4 aColor;
in vec2 aUV;
in int aTextureID;

out vec4 vColor;
out vec2 vUV;
out flat int vTextureID;

uniform mat4 uProjectionMatrix;

void main() {
	gl_Position = uProjectionMatrix * vec4( aPosition.xyz, 1 );
	vColor = aColor;
	vUV = aUV;
	vTextureID = aTextureID;
}